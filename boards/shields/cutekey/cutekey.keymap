#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define DEFAULT 0
#define NAV     1

/ {
    macros {
        copy: copy {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <40>;
            bindings = 
                <&macro_press &kp LEFT_CONTROL>,
                <&macro_tap &kp C>,
                <&macro_release &kp LEFT_CONTROL>;
        };
        paste: paste {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <40>;
            bindings = 
                <&macro_press &kp LEFT_CONTROL>,
                <&macro_tap &kp V>,
                <&macro_release &kp LEFT_CONTROL>;
        };
        line_comment: line_comment {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <40>;
            bindings = 
                <&macro_press &kp LEFT_CONTROL>,
                <&macro_tap &kp FSLH>,
                <&macro_release &kp LEFT_CONTROL>;
        };
        indent: indent {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <40>;
            bindings = 
                <&macro_press &kp LEFT_CONTROL>,
                <&macro_tap &kp RIGHT_BRACKET>,
                <&macro_release &kp LEFT_CONTROL>;
        };
        clean_build: clean_build {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <40>;
            bindings = 
                <&macro_press &kp LEFT_SHIFT>,
                <&macro_tap &kp F11>,
                <&macro_release &kp LEFT_SHIFT>;
        };

    };
};

/{
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &paste  &copy  &indent  &line_comment  &clean_build  &lt NAV SPACE 
            >;
            sensor-bindings = <&inc_dec_kp RIGHT LEFT>;
        };

        nav_layer {
            bindings = <
                &bootloader  &bt BT_CLR  &none  &none  &none  &trans 
            >;
            sensor-bindings = <&inc_dec_kp RIGHT LEFT>;
        };

    };
};